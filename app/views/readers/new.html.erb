  <%= form.check_box :false %>
  <%= form.label :false, "False" %>


  <%#= form.select :Avid_Reader, [true, false] %><br><br>

  <%# <%= form.label :Avid_Reader %>
  <%#= form.radio_button :Avid_Reader, true %>
  <%#= form.label :Avid_Reader_true, "True" %>
